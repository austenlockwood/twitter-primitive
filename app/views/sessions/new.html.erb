<h3>Sign in</h3>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
    <%= submit_tag %>
  <p>
    <%= link_to "Don't have an account?", new_user_path %>
  </p>
<% end %>
